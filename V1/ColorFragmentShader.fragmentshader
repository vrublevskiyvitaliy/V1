#version 120

varying vec3 vsoPosition;

uniform int number;
uniform sampler2D vertexTexture;

void main(void) {
    
    int index = 0;
    float texCoord = index / 127.0;
    vec2 vVertex = vec2(0,0);
    vec2 vTexCoords=vVertex/127.0;
    
    float term = texture2D(vertexTexture, vec2(0,0)).r;
    
    gl_FragColor = vec4(term,number/5.,0, 1.0);
}
